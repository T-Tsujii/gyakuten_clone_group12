<div class="container">
<h2>新規投稿</h2>
<%= form_with model:@question, url:questions_path, local: true do |f| %>
   <div class="form-group">
      <%= label_tag "form-title","【質問】" %>
      <%= f.text_area :title ,id:"form-title", class:"form-control", row:3 %>

   </div>
   <div class="form-group">
      <p><%= label_tag "form-detail","【詳細】" %></p>
      <%= f.text_area :detail ,id:"form-detail", class:"form-control", row:10 %>
   </div>
      <%= f.submit "送信",class:"btn btn-primary btn-block" ,id:"question-btn" %>
<% end %>

<% @questions.each do |question| %>
   <p class="small-container p-3">
      <%= question.title.truncate(50) %>
   </p>
<% end %>
</div>



